<Page x:Class="TimeLord_Kazakov.Pages.Stopwatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeLord_Kazakov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="782"
      Title="Stopwatch">

    <Grid Background="#ffe8e100">
        <Label x:Name="time" Content="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Center" 
               Margin="299 95 299 242.6" Foreground="White" FontSize="48"/>
        <Button x:Name="start" Click="StartStopwatch" Content="Начать" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="273,312,0,0" Width="100" Height="25" Background="White" Foreground="#ffe8e100"/>
        <Button x:Name="ComeBack" Click="BackStartStopwatch" Content="Обратно" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="273,352,0,0" Width="100" Height="25" Background="White" Foreground="#ffe8e100"/>
        <Button Click="AddInterval_Click" Content="Интервал" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="403,312,0,0" Width="100" Height="25" Background="White" Foreground="#ffe8e100"/>

        <ListView x:Name="intervalsList" Margin="100 50 100 0" Height="120"/>
    </Grid>
</Page>
